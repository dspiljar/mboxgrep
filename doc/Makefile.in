MANPAGE		=	mboxgrep.1
INSTALL		=	@INSTALL@
prefix		=	@prefix@
mandir		=	@mandir@
infodir		=	@infodir@
SHELL 		= 	/bin/sh

.PHONY: all
all:

.PHONY: distclean
distclean:
	rm -f *~ Makefile

.PHONY: install
install: mboxgrep.1
	$(INSTALL) -d $(mandir)/man1
	$(INSTALL) -m 0644 $(MANPAGE) $(mandir)/man1
	$(INSTALL) -d $(infodir)
	$(INSTALL) -m 0644 mboxgrep.info $(infodir)

.NOEXPORT:
